<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="gnome-shell-extensions">
  <schema id="org.gnome.shell.extensions.batt-watt-power-monitor" 
        path="/org/gnome/shell/extensions/batt-watt-power-monitor/">
    <!-- See also: https://docs.gtk.org/glib/gvariant-format-strings.html -->
    <key type="i" name="battery">
      <default>0</default>
      <summary></summary>
      <description></description>
    </key> 
    <key type="i" name="interval">
      <default>10</default>
      <summary></summary>
      <description></description>
    </key>   
    <key type="b" name="showicon">
      <default>true</default>
      <summary></summary>
      <description></description>
    </key>
    <key type="b" name="percentage">
      <default>true</default>
      <summary></summary>
      <description></description>
    </key> 
    <key type="b" name="timeremaining">
      <default>true</default>
      <summary></summary>
      <description></description>
    </key>
    <key type="b" name="hidecharging">
      <default>false</default>
      <summary></summary>
      <description></description>
    </key>
    <key type="b" name="hidefull">
      <default>false</default>
      <summary></summary>
      <description></description>
    </key>
    <key type="b" name="hideidle">
      <default>false</default>
      <summary></summary>
      <description></description>
    </key>
    <key type="b" name="showwatts">
      <default>true</default>
      <summary></summary>
      <description></description>
    </key>
    <key type="b" name="showdecimals">
      <default>false</default>
      <summary>Show wattage with 2 decimal places</summary>
      <description>If enabled, displays wattage like 15.75W. If disabled, displays 16W.</description>
    </key>
    <key type="b" name="usecircleindicator">
      <default>false</default>
      <summary>Use circular battery indicator</summary>
      <description>Replaces the default battery icon with a circular meter indicator.</description>
    </key>
    <key type="b" name="debug">
      <default>false</default>
      <summary></summary>
      <description></description>
    </key>
  </schema>
</schemalist>

<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="gnome-shell-extensions">
  <schema id="org.gnome.shell.extensions.batt-watt-power-monitor" 
        path="/org/gnome/shell/extensions/batt-watt-power-monitor/">
    <!-- See also: https://docs.gtk.org/glib/gvariant-format-strings.html -->
    <key type="i" name="battery">
      <default>0</default>
      <summary></summary>
      <description></description>
    </key> 
    <key type="i" name="interval">
      <default>10</default>
      <summary></summary>
      <description></description>
    </key>   
    <key type="b" name="showicon">
      <default>true</default>
      <summary></summary>
      <description></description>
    </key>
    <key type="i" name="batterysize">
      <default>27</default>
      <summary>Battery icon width</summary>
      <description>Pixel width for the battery icon.</description>
    </key>
    <key type="i" name="batteryheight">
      <default>33</default>
      <summary>Battery icon height</summary>
      <description>Pixel height for the battery icon.</description>
    </key>
    <key type="b" name="percentage">
      <default>true</default>
      <summary></summary>
      <description></description>
    </key> 
    <key type="b" name="showpercentageoutside">
      <default>false</default>
      <summary>Show percentage outside icons</summary>
      <description>When enabled, shows percentage as text outside the icon.</description>
    </key>
    <key type="b" name="timeremaining">
      <default>true</default>
      <summary></summary>
      <description></description>
    </key>
    <key type="b" name="hidecharging">
      <default>false</default>
      <summary></summary>
      <description></description>
    </key>
    <key type="b" name="hidefull">
      <default>false</default>
      <summary></summary>
      <description></description>
    </key>
    <key type="b" name="hideidle">
      <default>false</default>
      <summary></summary>
      <description></description>
    </key>
    <key type="b" name="showwatts">
      <default>true</default>
      <summary></summary>
      <description></description>
    </key>
    <key type="b" name="showdecimals">
      <default>false</default>
      <summary>Show wattage with 2 decimal places</summary>
      <description>If enabled, displays wattage like 15.75W. If disabled, displays 16W.</description>
    </key>
    <key type="b" name="showcolored">
      <default>false</default>
      <summary>Show colored indicator</summary>
      <description>Enable colored ring/text for the circular indicator. Disable to force monochrome (loses the color).</description>
    </key>
    <key type="b" name="usecircleindicator">
      <default>false</default>
      <summary>Use circular battery indicator</summary>
      <description>Replaces the default battery icon with a circular meter indicator.</description>
    </key>
    <key type="i" name="circlesize">
      <default>27</default>
      <summary>Circular indicator size</summary>
      <description>Pixel size for the circular indicator.</description>
    </key>
    <key type="b" name="debug">
      <default>false</default>
      <summary></summary>
      <description></description>
    </key>
    <key type="b" name="forcebolt">
      <default>false</default>
      <summary>Force bolt icon</summary>
      <description>Always show the charging bolt for testing.</description>
    </key>
    <key type="i" name="loglevel">
      <default>1</default>
      <summary>Log level</summary>
      <description>Verbosity for debug logging: 0=Verbose, 1=Debug, 2=Info, 3=Warn, 4=Error.</description>
    </key>
    <key type="b" name="logtofile">
      <default>true</default>
      <summary>Log to file</summary>
      <description>When enabled, debug logs are written to a file.</description>
    </key>
    <key type="s" name="logfilepath">
      <default>''</default>
      <summary>Log file path</summary>
      <description>Path to write debug logs. Leave empty for default cache path.</description>
    </key>
  </schema>
</schemalist>
